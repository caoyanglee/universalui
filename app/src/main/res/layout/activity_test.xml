<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.pmm.demo.module.test.TestActivity">

    <com.pmm.ui.widget.ToolBarPro
        android:id="@+id/mToolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <Button
                android:id="@+id/mBtn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="selector" />

            <Button
                android:id="@+id/mBtn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="selector" />

            <Button
                android:id="@+id/mBtn3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="progressbar" />

            <Button
                android:id="@+id/mBtn4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="progressbarV2" />


            <Button
                android:id="@+id/mBtn5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="permission" />

            <Button
                android:id="@+id/mBtn6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="copy content" />

            <Button
                android:id="@+id/mBtn7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="clear clipboard" />

            <Button
                android:id="@+id/mBtn8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="get clipboard" />

            <TextView
                android:id="@+id/vNavigationBar"
                android:layout_width="wrap_content"
                android:layout_height="500dp"
                android:text="导航条高度：0单位" />


            <EditText
                android:id="@+id/etContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start|top"
                android:hint="若设备校区有误或存在其他问题，请在此备注"
                android:lineSpacingExtra="4dp"
                android:minHeight="92dp"
                android:padding="10dp"
                android:text=""
                android:textColor="#191919"
                android:textColorHint="#999999"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>



